<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwei.MoNi_San.activity.TouXiangActivity">

    <RelativeLayout
        android:id="@+id/re_touxiang"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="21dp"
            android:text="头像"/>
        <ImageView
            android:id="@+id/image_touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/yuan"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@id/re_touxiang"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#000"
        />
    <RelativeLayout
        android:id="@+id/re_user"
        android:layout_width="match_parent"
        android:layout_below="@id/view1"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="21dp"
            android:text="用户名"/>
        <TextView
            android:id="@+id/user_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="username"/>
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_below="@id/re_user"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#000"/>
    <RelativeLayout
        android:id="@+id/re_nicheng"
        android:layout_width="match_parent"
        android:layout_below="@id/view2"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="21dp"
            android:text="昵称"/>
        <TextView
            android:id="@+id/txt_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="nicheng"/>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@id/re_nicheng"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#000"/>


</RelativeLayout>
